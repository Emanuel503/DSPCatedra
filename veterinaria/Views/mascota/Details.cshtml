@model veterinaria.Models.mascota

@{
    ViewBag.Title = "Details";
}

<h2>Detalles de la mascota</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre de la mascota:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreMascota)
        </dd>

        <dt>
            Sexo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sexo)
        </dd>

        <dt>
            Raza:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.raza)
        </dd>

        <dt>
            Tipo de animal:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipoAnimal)
        </dd>

        <dt>
            Fecha de ingreso:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaIngreso)
        </dd>

        <dt>
            Fecha de nacimiento:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaNacimiento)
        </dd>

        <dt>
            Nombre dueño:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreDueno)
        </dd>

        <dt>
            N° de telefono
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefonoDueno)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.idMascota }, new { @class = "btn btn-primary" } )
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
</p>
